<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/add_medication_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.AddMedicationsActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                app:theme="@style/ToolbarTheme">

                <TextView
                    android:id="@+id/tv_create_account_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sfpro_display_regular"
                    android:gravity="center_horizontal"
                    android:text="@string/add_medication"
                    android:textAlignment="center"
                    android:textColor="@color/darkBlue"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="40dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:fontFamily="@font/helveticaneueltpro_roman"
                            android:text="@string/medication_name"
                            android:textColor="@color/text_blue"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/name_info"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="8dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_info" />

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/medi_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="@string/enter_medication_name"
                        android:maxLines="1"
                        android:minLines="1"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:fontFamily="@font/helveticaneueltpro_roman"
                            android:text="@string/rx_or_din"
                            android:textColor="@color/text_blue"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/rx_din_info"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="8dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_info" />

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/rx_din_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="@string/enter_rx_din_number"
                        android:maxLines="1"
                        android:minLines="1"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:fontFamily="@font/helveticaneueltpro_roman"
                            android:text="@string/strength"
                            android:textColor="@color/text_blue"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/strength_info"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="8dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_info" />

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/medi_strength"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="@string/enter_strength"
                        android:maxLines="1"
                        android:minLines="1"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:fontFamily="@font/helveticaneueltpro_roman"
                            android:text="@string/strength_unit"
                            android:textColor="@color/text_blue"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/strength_unit_info"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="8dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_info" />

                    </LinearLayout>

                    <Spinner
                        android:id="@+id/strength_unit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/strength_unit"
                        android:paddingEnd="2dp"
                        android:theme="@android:style/Theme.DeviceDefault.Light.DarkActionBar"
                        tools:ignore="RtlSymmetry" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:fontFamily="@font/helveticaneueltpro_roman"
                            android:text="@string/dispensed_date"
                            android:textColor="@color/text_blue"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/dispensed_date_info"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="8dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_info" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/dis_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:fontFamily="@font/helveticaneueltpro_roman"
                            android:text="@string/amount"
                            android:textColor="@color/text_blue"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/amount_info"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="8dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_info" />

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="@string/enter_amount"
                        android:maxLines="1"
                        android:minLines="1"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:fontFamily="@font/helveticaneueltpro_roman"
                            android:text="@string/form"
                            android:textColor="@color/text_blue"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/form_unit_info"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="8dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_info" />

                    </LinearLayout>

                    <Spinner
                        android:id="@+id/form_spin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/from_type"
                        android:paddingVertical="2dp"
                        android:paddingEnd="2dp"
                        android:theme="@android:style/Theme.DeviceDefault.Light.DarkActionBar"
                        tools:ignore="RtlSymmetry" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:fontFamily="@font/helveticaneueltpro_roman"
                            android:text="@string/dosage"
                            android:textColor="@color/text_blue"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/dosage_info"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="8dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_info" />

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/dosage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="@string/enter_dosage"
                        android:maxLines="1"
                        android:minLines="1"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:id="@+id/reminders_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:fontFamily="@font/helveticaneueltpro_roman"
                            android:text="@string/set_reminders"
                            android:textColor="@color/text_blue"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/reminder_info"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="8dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_info" />

                    </LinearLayout>

                    <Spinner
                        android:id="@+id/frequency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/frequency"
                        android:paddingEnd="2dp"
                        android:theme="@android:style/Theme.DeviceDefault.Light.DarkActionBar"
                        tools:ignore="RtlSymmetry" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:id="@+id/intake_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:fontFamily="@font/helveticaneueltpro_roman"
                            android:text="@string/intake_time"
                            android:textColor="@color/darkBlue"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/intake_time_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:maxLines="1"
                            android:padding="4dp"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="2dp"
                            android:background="@color/gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/intake_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:fontFamily="@font/helveticaneueltpro_roman"
                            android:text="@string/intake_time"
                            android:textColor="@color/darkBlue"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/intake_time_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:maxLines="1"
                            android:padding="4dp"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="2dp"
                            android:background="@color/gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/intake_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:fontFamily="@font/helveticaneueltpro_roman"
                            android:text="@string/intake_time"
                            android:textColor="@color/darkBlue"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/intake_time_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:maxLines="1"
                            android:padding="4dp"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="2dp"
                            android:background="@color/gray" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/intake_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:fontFamily="@font/helveticaneueltpro_roman"
                            android:text="@string/intake_time"
                            android:textColor="@color/darkBlue"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/intake_time_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:maxLines="1"
                            android:padding="4dp"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="2dp"
                            android:background="@color/gray" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:fontFamily="@font/helveticaneueltpro_roman"
                            android:text="@string/refill_date"
                            android:textColor="@color/text_blue"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/refill_date_info"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="8dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_info" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/refill_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:enabled="false"
                            android:fontFamily="@font/helveticaneueltpro_roman"
                            android:maxLines="1"
                            android:padding="2dp"
                            android:text="@string/calculate_automatically"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/settings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/icon_calender" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:fontFamily="@font/helveticaneueltpro_roman"
                            android:text="@string/additional_comments"
                            android:textColor="@color/text_blue"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/comments_info"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="8dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_info" />

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/medi_comments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="@string/enter_comments"
                        android:maxLines="1"
                        android:minLines="1"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:fontFamily="@font/helveticaneueltpro_roman"
                            android:text="@string/pharmacy"
                            android:textColor="@color/text_blue"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/pharmacy_info"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="8dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_info" />

                    </LinearLayout>

                    <Spinner
                        android:id="@+id/pharmacy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:theme="@android:style/Theme.DeviceDefault.Light.DarkActionBar" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/gray" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/add_pharmacy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/green"
                        android:elevation="4dp"
                        android:fontFamily="@font/roboto_regular"
                        android:padding="16dp"
                        android:text="@string/add_pharmacy"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:cornerRadius="6dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/add_medication"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/green"
                        android:elevation="4dp"
                        android:fontFamily="@font/roboto_regular"
                        android:padding="16dp"
                        android:text="@string/save"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:cornerRadius="6dp" />


                </LinearLayout>

            </androidx.core.widget.NestedScrollView>
        </LinearLayout>


    </LinearLayout>
</layout>
